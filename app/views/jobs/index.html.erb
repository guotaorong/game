<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider"
data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"
>
    ORDER
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelleby="dropdownMenuDivider">
    <li>
      <%= link_to("BY LOWER", jobs_path(:order => "by_lower_bound"))%>
      <%= link_to("BY UPPER", jobs_path(:order => "by_upper_bound"))%>
      <%= link_to("BY TIME", jobs_path)%>
      <hr>
      <%= link_to("Wolfs", jobs_path(:order => "by_wolf"))%>
      <%= link_to("Lions", jobs_path(:order => "by_lion"))%>
      <%= link_to("Dragons", jobs_path(:order => "by_dragon"))%>
    </li>
  </ul>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <td>title</td>
      <td>lower</td>
      <td>upper</td>
      <td>time</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job|%>
      <tr>
        <td>
          <%= link_to(job.title, job_path(job))%>
        </td>
        <td><%= job.wage_lower_bound%></td>
        <td><%= job.wage_upper_bound%></td>
        <td>
          <%= job.created_at%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
