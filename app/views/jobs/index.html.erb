<table class="table table-boldered">
  <thead>
    <tr>
      <td>title</td>
      <td>lower</td>
      <td>upper</td>
      <td>time</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job|%>
      <tr>
        <td>
          <%= link_to(job.title, job_path(job))%>
        </td>
        <td><%= job.wage_lower_bound%></td>
        <td><%= job.wage_upper_bound%></td>
        <td>
          <%= job.created_at%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
